{
  "name": "uploader-api",
  "module": "index.tsx",
  "type": "module",
  "scripts": {
    "dev": "bun --watch run server.ts",
    "start": "bun prod/server.js",
    "build": "bun build server.ts --target=bun --outdir=prod",
    "migrate": "drizzle-kit generate:pg",
    "db:migrate": "node -r esbuild-register db/migrate.js",
    "db:push": "drizzle-kit push:pg",
    "migrations:drop": "drizzle-kit drop --config=drizzle.config.ts"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/bun": "^1.0.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.20.18"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.5",
    "sharp": "^0.33.3",
    "zod": "^3.23.6"
  }
}
